<div class="col-xs-12 col-md-4 pl-0 pr-0">
  <div class="form-section d-flex justify-content-center align-items-center">
    <div class="form-content-login">
      <h2 class='text-center'>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { label_html: { class: 'form-label' }, input_html: { class: 'form-input' } }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Log in", class: "cta-primary cta-primary-nav" %>
          <p class="login-text"><%= render "devise/shared/links" %></p>
        </div>
      <% end %>
    </div>
  </div>

</div>

