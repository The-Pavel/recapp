<div class="form-container">
  <div class="col-xs-12 col-md-4 pl-0">
    <div class="bg-img position-relative">
      <%= image_tag("desktop.png", class: 'mw-100 position-relative d-block') %>
      <div class="bg-text position-absolute w-75">
        <div class="h2">Let's Get</div>
        <div class="h1">Started</div>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua labore et dolore magna aliqua. </p>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-md-8">
    <div class="form-section d-flex justify-content-center align-items-center">
      <div class="form-content">
        <h2>Create Account</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { label_html: { class: 'form-label' }, input_html: { class: 'form-input' } }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <div class="row">
              <div class="col-xs-12 col-sm-6">
                <%= f.input :first_name,
                            autofocus: true ,
                            input_html: { autocomplete: "first name" },
                            label: 'First Name',
                            placeholder: 'First Name'%>
              </div>
              <div class="col-xs-12 col-sm-6">
                <%= f.input :last_name,
                            autofocus: true ,
                            input_html: { autocomplete: "last name" },
                            label: 'Last Name',
                            placeholder: 'Last Name'%>
              </div>
            </div>
            <%= f.input :email,
                        input_html: { autocomplete: "email" },
                        placeholder: 'user@example.com'%>
            <%= f.input :password,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: 'Password Confirmation',
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="form-actions text-center">
            <%= f.button :submit, "Sign up", class: "btn btn-primary btn-lg" %>
            <p class="login-text">Already have an account?<%= render "devise/shared/links" %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

