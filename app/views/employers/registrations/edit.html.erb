<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.hint "Jobseekers will only see your company name if you leave these blank" %>
    <%= f.input :first_name, input_html: { autocomplete: "given-name" }, label: "Your First Name" %>
    <%= f.input :last_name, input_html: { autocomplete: "family-name" }, label: "Your Last Name" %>
    <%= f.input :company_name, required: true, label: "Your Company Name" %>
    <%= f.input :employer_bio, label: "Company Intro", hint: "Tell jobseekers why they should join you! (100-1000 characters)" %>
    <%= f.input :employer_website, label: "Your Website" %>
    <%= f.input :employer_title, label: "Your Title", hint: "What do you do in your company?" %>
    <%= f.input :contact_info, hint: "How would you like to be contacted?" %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

<h3>Change Password</h3>

    <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" },
                label: "New Password" %>

    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" },
                label: "New Password Confirmation" %>

<h3>Confirm Changes</h3>

    <%= f.input :current_password,
                hint: "Your password to confirm changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
