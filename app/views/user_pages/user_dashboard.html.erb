  <div class="list-group">
    <% @user.cv_array.each do |cv, index| %>
      <div class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1"><a href="<%= cv %>" target="_blank">view</a></h5>
          <small>3 days ago</small>
        </div>
        <p class="mb-1">Donec id elit non mi porta gravida at eget metus. Maecenas sed diam eget risus varius blandit.</p>
        <small>Donec id elit non mi porta.</small>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="card w-50">
        <div class="card-body">
          <h5>Upload your video <input type="file" name="videoupload" multiple></h5>
          <button id="save" class="btn btn-primary">Save</button>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card w-50">
        <div class="card-body">
          <h5>Upload your CV <input type="file" name="cvupload" multiple></h5>
          <button id="savecv" class="btn btn-primary">Save</button>
        </div>
      </div>
    </div>
  </div>

  <div class="card-deck">
    <% @user.video_array.each do |video| %>
      <!-- when passing (video) into delete_video_user_url it alters the route to include the video url -->

      <div class="card">
        <%= cl_video_tag video, cloud_name: 'thepav', controls: true, :class => "video-container" %>
        <div class="card-body">
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <button id="delete_video" value=<%= video %> class="btn btn-danger">Delete</button>
        </div>
      </div>
    <% end  %>
  </div>
</div>


