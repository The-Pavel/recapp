<video id="gum" playsinline autoplay></video>
<video id="recorded" playsinline loop></video>
<button id="rec" class="btn btn-primary">Record</button>
<button id="stop" disabled class="btn btn-warning">Stop</button>
<button id="submit" disabled class="btn btn-success">Save recording</button>

