<%= render 'shared/navbar-dashboard' %>

<div class="dashboard-main-container d-flex flex-column">

  <div class="list-group">
    <% @user.cv_array.each do |cv| %>
      <div class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1">CV</h5>
          <small>3 days ago</small>
        </div>
        <p class="mb-1"><a href="<%= cv %>" target="_blank">view</a></p>
        <!-- <small>Donec id elit non mi porta.</small> -->
      </div>
    <% end %>
  </div>

  <div class="card-deck">
    <% @user.video_array.each do |video| %>
      <div class="card" style="width: 320px;">
        <%= cl_video_tag video, cloud_name: 'thepav', controls: true, :class => "video-container" %>
        <!-- <img src="..." class="card-img-top" alt="..."> -->
        <div class="card-body">
          <h5 class="card-title">Card title</h5>
          <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
          <button id="delete_video" class="btn btn-primary" value=<%= video %>>Delete</button>
        </div>
      </div>
    <% end  %>
  </div>

  <%= link_to "Add information", edit_user_registration_path(current_user)  %>
<ul style="list-style-type: none;">
  <li>First name: <%= @user.first_name %></li>
  <li>Last name: <%= @user.last_name %></li>
  <li>Contact information: <%= @user.contact_info %></li>
  <% @user.cvs.each do |cv| %>
  <% if cv.is_video == true %>
  <%=cl_video_tag cv.file.file.public_id, autoplay: true, height: 600, width: 450, controls: true, muted: true %>
  <% else %>
  <%= cv.title %> <br>
  <%= link_to (cl_image_tag cv.file.file.public_id, {size: '140x200', crop: :thumb, format: :jpg}), "https://res.cloudinary.com/thepav/#{cv.file.file.identifier}", target: 'blank' %>
  <% end  %>
  <%= link_to "Update", edit_cv_path(cv) %>
  <%= link_to "Delete", cv_path(cv), method: :delete %>
<% end %>
<p>just text to delete later</p>


  <%= link_to "Add CV", new_cv_path %>
</ul>

</div>

